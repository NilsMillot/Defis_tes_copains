<div class="row">
    {{ form_start(form) }}
    <div class="row">
        <div class="row">
            <div class="input-field col s12">
                {{ form_widget(form.name) }}
                <label for="challenges_deadline">Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                {{ form_widget(form.picture) }}
                <label for="challenges_deadline">Picture</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="inline">
                <label >Tags</label>
                {% for user in form.users %}
                    <p>
                        <label>
                            {{ form_widget(user, {'attr': {'class': 'checkbox-user'}}) }}
                            <span>{{ form_label(user) }}</span>
                        </label>
                    </p>
                {% endfor %}
            </div>
        </div>
    </div>
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
