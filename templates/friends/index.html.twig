{% extends 'base_front.html.twig' %}
{% set currentUser = "" %}
{% block title %}Friends index{% endblock %}

{% block body %}
    <h1>Friends index</h1>

    <h2>Vos amis / Demandes d'amis</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% set currentUser = app.user.id %}
        {% for friend in friendsRequestsOfCurrentUser %}
            <tr>
                <td>{{ friend.id }}</td>
                <td>{{ friend.status }}</td>
                <td>
                    <a href="{{ path('friends_show', {'id': friend.id}) }}">show</a>
                    {% if friend.status is same as('accepted') %}>{{ include('friends/_delete_form.html.twig') }}{% endif %}
                    {% if friend.status is same as('sent') %}><span> en attente...</span>{% endif %}
                    {% if friend.status is same as('sent') %}><a href="{{ path('friends_accept', {'id': friend.id}) }}"> Accepter la demande</a>{% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no friend found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('friends_new') }}">Create new</a>
