{% extends 'base_front.html.twig' %}

{% block title %}Changer de mot de passe | DTC{% endblock %}

{% block body %}
	<div style="margin: 20vh 0;">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<h1>Change ton mot de passe!</h1>

		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email) }}
		<div>
			<small>
				Saisis ton email pour recevoir un lien pour changer ton mot de passe.
			</small>
		</div>

		<button class="btn btn-primary" style="margin-top: 20px">Envoyer le mail de confirmation</button>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
