{% extends 'base_back.html.twig' %}


{% block body %}
<div class="container">
    <a class="waves-effect waves-light btn green accent-4" href="{{ path("admin_category_new") }}">Cr√©er</a>
    <div class="card card_back">
        <div class="card_back_content">
            <table id="category_view" class="datatable table row-border">
        <thead>
            <tr>
                <th class="back_th">Id</th>
                <th class="back_th">Name</th>
                <th class="back_th">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="back_th">{{ category.id }}</td>
                <td class="back_th">{{ category.name }}</td>
                <td class="row back_th">
                    <div class="col s4 ">
                        <a href="{{ path('admin_category_edit', {'id': category.id}) }}"><i
                                    class="orange-text darken-4 material-icons small">create</i></a>
                    </div>
                    <div class="col s4">
                        {{ include('back/category/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
