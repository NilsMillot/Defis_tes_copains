{% extends 'base_back.html.twig' %}

{% block body %}
    <div class="container">
    <a class="waves-effect waves-light btn green accent-4" href="{{ path("admin_user_new") }}">Cr√©er</a>
    <div class="card card_back">
    <div class="card_back_content">
        <table id="user_view" class="datatable table row-border">
            <thead>
        <tr>
            <th class="back_th">Id</th>
            <th class="back_th">Username</th>
            <th class="back_th">Email</th>
            <th class="back_th">Role</th>
            <th class="back_th">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                {% for role in user.roles %}
                    <div class="chip">{{ role }}</div>
                {% endfor %}
                </td>
                <td class="row">
                    <div class="col s4 ">
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}"><i
                                    class="orange-text darken-4 material-icons small">create</i></a>
                    </div>
                    <div class="col s4">
                        {{ include('back/users/_delete_form.html.twig') }}
                    </div>
                    <div class="col s4">
                        <a href="{{ path('admin_user_show', {'id': user.id }) }}"><i class="green-text darken-4 material-icons small">visibility</i></a>
                    </div>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    </div>
{% endblock %}