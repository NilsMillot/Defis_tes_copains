{% extends 'base_front.html.twig' %}

{% block title %}Challenges{% endblock %}

{% block body %}
    <h1>Challenges</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ challenge.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ challenge.name }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ challenge.creationDate ? challenge.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ challenge.deadline ? challenge.deadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Qr_code</th>
                <td>{{ challenge.qrCode }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img  src={{ vich_uploader_asset(challenge, 'imageFile') }} width="300px"/></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('challenges_index') }}">back to list</a>

    <a href="{{ path('challenges_edit', {'id': challenge.id}) }}">edit</a>

    {{ include('challenges/_delete_form.html.twig') }}
{% endblock %}
