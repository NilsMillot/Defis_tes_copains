<div class="row">
    {{ form_start(form) }}
    <div class="row">
        <div class="input-field col s6">
            {{ form_widget(form.name) }}
            <label for="challenges_name">Name</label>
        </div>
        <div class="input-field col s6">
            {{ form_widget(form.description) }}
            <label for="challenges_description">Description</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            {{ form_widget(form.deadline) }}
            <label for="challenges_deadline">Deadline</label>
        </div>
    </div>
    <div class="row">
        <div class=" col s12">
            <label for="challenges_imageFile_file">Image</label>
            <div heigth="50px">{{ form_widget(form.imageFile) }}</div>
        </div>
    </div>
    <div class="row">
        <div class=" col s12 input-field">
            {{ form_widget(form.category) }}
            <label for="challenges_category">Categorie</label>
        </div>
    </div>
    <div class="row">
        <div class=" col s12">
        <label for="challenges_tags">Tags</label>
        <div  class="chips chips-placeholder input-field">
            {{ form_widget(form.tags) }}
        </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="switch">
                <label>
                    Challenge Fermer
                    {{ form_widget(form.status) }}
                    <span class="lever"></span>
                    Challenge Ouvert
                </label>
            </div>
        </div>
    </div>
    <button class="btn btn-primary waves-effect waves-light" type="submit">Editer</button>
    {{ form_end(form) }}
</div>


<style>
    button{
        margin-top: 30px;
        margin-bottom: 30px;
    }
</style>
